<Window x:Class="assesment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assesment3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="3" Width="500" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="2" CornerRadius="50" Margin="150,23,150,64"></Border>
        <StackPanel Grid.Row="1" Grid.Column="1"  Orientation="Vertical" Height="70" >
            <Label Content="UserName" FontFamily="Comic Sans MS" ></Label>
            <TextBox Name="txtuser" Height="30"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1"  Orientation="Vertical" Height="70" >
            <Label Content="Password" FontFamily="Comic Sans MS" ></Label>
            <PasswordBox Name="txtPass" Height="30"></PasswordBox>
        </StackPanel>
        <Button Content="Login" Grid.Column="1" Grid.Row="3" Height="30" Width="120" Click="Button_Click"></Button>
    </Grid>
</Window>
